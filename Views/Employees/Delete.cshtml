@model Company_Management_Panel_CSharp.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>Employee: @Html.DisplayFor(model => model.FirstName)</h4>
    <hr />
    <div class="d-flex flex-column flex-md-row mb-3">
        <img src="~/images/placeholder-profile-picture.jpg"
             alt="Company Logo"
             class="rounded-circle border border-2 d-block object-fit-cover me-md-3 mb-3 mb-md-0"
             style="width: 179px; height: 179px;" />
        <div class="w-100">
            <ul class="list-group flex-grow-1 mb-3">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="fw-bold">Full Name:</div>
                    <div>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@Html.DisplayNameFor(model => model.Email):</div>
                    <div>@Html.DisplayFor(model => model.Email)</div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber):</div>
                    <div>@Html.DisplayFor(model => model.PhoneNumber)</div>
                </li>
            </ul>
            <div>
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>