@model Company_Management_Panel_CSharp.Models.Company

@{
    ViewData["Title"] = "Delete";
}

<h1>Details</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Company: @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <div class="d-flex flex-column flex-md-row mb-3">
        <img src="@(string.IsNullOrEmpty(@Model.LogoPath) ? Url.Content("~/images/placeholder-logo.jpg") : Url.Content("~/images/" + @Model.LogoPath))"
             alt="Company Logo"
             class="rounded-circle border border-2 d-block object-fit-cover me-md-3 mb-3 mb-md-0"
             style="width: 179px; height: 179px;" />
        <div class="w-100">
            <ul class="list-group flex-grow-1 mb-3">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@Html.DisplayNameFor(model => model.Name):</div>
                    <div>@Html.DisplayFor(model => model.Name)</div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@Html.DisplayNameFor(model => model.Email):</div>
                    <div>@Html.DisplayFor(model => model.Email)</div>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@Html.DisplayNameFor(model => model.Website):</div>
                    <div>@Html.DisplayFor(model => model.Website)</div>
                </li>
            </ul>
            <div>
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>

<div class="overflow-x-auto">
    @if (Model.Employees != null && Model.Employees.Any())
    {
        <table class="table table-striped mb-0">
            <thead>
                <tr class="table-primary">
                    <th class="text-nowrap"></th>
                    <th class="text-nowrap">Name</th>
                    <th class="text-nowrap">Email</th>
                    <th class="text-nowrap">Phone Number</th>
                    <th class="text-nowrap"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>
                            <img src="~/images/placeholder-profile-picture.jpg"
                                 alt="Company Logo"
                                 class="rounded-circle border border-1 d-block object-fit-cover"
                                 style="width: 40px; height: 40px;" />
                        </td>
                        <td class="align-middle text-nowrap">
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td class="align-middle">
                            <div class="d-flex gap-1 flex-nowrap">
                                <a asp-action="Edit" asp-controller="Employees" asp-route-id="@item.Id" class="btn btn-primary btn-sm d-flex gap-1 flex-nowrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg>
                                    Edit
                                </a>
                                <a asp-action="Details" asp-controller="Employees" asp-route-id="@item.Id" class="btn btn-info btn-sm d-flex gap-1 flex-nowrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                    </svg>
                                    Details
                                </a>
                                <a asp-action="Delete" asp-controller="Employees" asp-route-id="@item.Id" class="btn btn-danger btn-sm d-flex gap-1 flex-nowrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No employees found for this company.</p>
    }
</div>

